<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#009688">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="UNICLIP"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:textColor="#AAFFFFFF"
        android:textSize="40sp"
        android:typeface="monospace"/>

    <ScrollView
        android:layout_width="400sp"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_start_stop"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16sp"
        android:padding="20sp"
        android:paddingLeft="30sp"
        android:paddingRight="36sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="UniClip is a multi-device clipboard synchronization
                application, which makes sharing text, links, addresses easy."
                android:textColor="#CCFFFFFF"
                android:textAlignment="center"
                android:id="@+id/welcome_text"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#88FFFFFF"
                android:layout_below="@id/welcome_text"
                android:layout_marginTop="6dp"/>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="400sp"
        android:layout_height="60sp"
        android:id="@+id/rl_start_stop"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start UniClip!"
            android:id="@+id/b_start_stop"
            android:textColor="#CCFFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/card_background_layout"/>

    </RelativeLayout>

</RelativeLayout>