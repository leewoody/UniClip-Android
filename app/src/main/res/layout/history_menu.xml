<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_history"
    android:paddingLeft="30sp"
    android:background="@color/colorPrimary"
    android:paddingRight="30sp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--android:visibility="gone"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clipboard History"
        android:textSize="30sp"
        android:id="@+id/history_title"
        android:layout_marginTop="20sp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This session's history:"
        android:textSize="18sp"
        android:layout_marginLeft="6sp"
        android:id="@+id/history_desc"
        android:layout_below="@id/history_title"
        android:layout_marginTop="10sp"
        android:textColor="#AAFFFFFF"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/history_desc"
        android:layout_marginTop="8sp"
        android:layout_above="@+id/rl_clear_history"
        android:paddingRight="16sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_history_feed"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="400sp"
        android:layout_height="60sp"
        android:id="@+id/rl_clear_history"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear History"
            android:id="@+id/b_clear_history"
            android:textColor="#CCFFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/card_background_layout"/>

    </RelativeLayout>

</RelativeLayout>