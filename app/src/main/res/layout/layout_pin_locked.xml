<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_lockscreen"
    android:background="#CC000000"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sv_lockscreen"
        android:id="@+id/rl_lockscreen_mask"
        android:layout_alignParentTop="true">

    </RelativeLayout>

    <!--Tutorial 1 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@id/sv_lockscreen"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEFFFFFF"
            android:padding="6sp"
            android:id="@+id/rl_tut_content_1"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Access PIN"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:id="@+id/lockscreen_heading"/>

            <TextView
                android:layout_width="120sp"
                android:layout_height="60sp"
                android:layout_marginTop="10sp"
                android:layout_centerHorizontal="true"
                android:maxLength="8"
                android:text=""
                android:textSize="26sp"
                android:layout_below="@id/lockscreen_heading"
                android:hint="* * * *"
                android:gravity="center"
                android:id="@+id/lockscreen_pin"/>


            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/lockscreen_pin"
                android:id="@+id/gl_lockcreen_keypad"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:text="1"
                    android:id="@+id/keypad_1"
                    android:textSize="23sp"
                    android:background="@drawable/circular_background_layout"
                    android:textColor="#AA000000"
                    android:gravity="center"
                    android:layout_margin="14sp"
                    android:layout_marginTop="14sp"
                    android:padding="12sp"/>

                <TextView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:text="2"
                    android:id="@+id/keypad_2"
                    android:textSize="23sp"
                    android:background="@drawable/circular_background_layout"
                    android:textColor="#AA000000"
                    android:gravity="center"
                    android:layout_margin="14sp"
                    android:layout_marginTop="14sp"
                    android:padding="12sp"/>

                <TextView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:text="3"
                    android:id="@+id/keypad_3"
                    android:textSize="23sp"
                    android:background="@drawable/circular_background_layout"
                    android:textColor="#AA000000"
                    android:gravity="center"
                    android:layout_margin="14sp"
                    android:layout_marginTop="14sp"
                    android:padding="12sp"/>

                <TextView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:text="4"
                    android:id="@+id/keypad_4"
                    android:textSize="23sp"
                    android:background="@drawable/circular_background_layout"
                    android:textColor="#AA000000"
                    android:gravity="center"
                    android:layout_margin="14sp"
                    android:layout_marginTop="14sp"
                    android:padding="12sp"/>

                <TextView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:text="5"
                    android:id="@+id/keypad_5"
                    android:textSize="23sp"
                    android:background="@drawable/circular_background_layout"
                    android:textColor="#AA000000"
                    android:gravity="center"
                    android:layout_margin="14sp"
                    android:layout_marginTop="14sp"
                    android:padding="12sp"/>

                <TextView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:text="6"
                    android:id="@+id/keypad_6"
                    android:textSize="23sp"
                    android:background="@drawable/circular_background_layout"
                    android:textColor="#AA000000"
                    android:gravity="center"
                    android:layout_margin="14sp"
                    android:layout_marginTop="14sp"
                    android:padding="12sp"/>

                <TextView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:text="7"
                    android:id="@+id/keypad_7"
                    android:textSize="23sp"
                    android:background="@drawable/circular_background_layout"
                    android:textColor="#AA000000"
                    android:gravity="center"
                    android:layout_margin="14sp"
                    android:layout_marginTop="14sp"
                    android:padding="12sp"/>

                <TextView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:text="8"
                    android:id="@+id/keypad_8"
                    android:textSize="23sp"
                    android:background="@drawable/circular_background_layout"
                    android:textColor="#AA000000"
                    android:gravity="center"
                    android:layout_margin="14sp"
                    android:layout_marginTop="14sp"
                    android:padding="12sp"/>

                <TextView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:text="9"
                    android:id="@+id/keypad_9"
                    android:textSize="23sp"
                    android:background="@drawable/circular_background_layout"
                    android:textColor="#AA000000"
                    android:gravity="center"
                    android:layout_margin="14sp"
                    android:layout_marginTop="14sp"
                    android:padding="12sp"/>

                <TextView
                    android:layout_width="80sp"
                    android:layout_height="60sp"
                    android:text="Clear"
                    android:id="@+id/keypad_clear"
                    android:textSize="23sp"
                    android:background="@drawable/circular_accented_background_layout"
                    android:textColor="#AAFFFFFF"
                    android:gravity="center"
                    android:layout_margin="10sp"
                    android:padding="5sp"/>

                <TextView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:text="0"
                    android:id="@+id/keypad_0"
                    android:textSize="23sp"
                    android:background="@drawable/circular_background_layout"
                    android:textColor="#AA000000"
                    android:gravity="center"
                    android:layout_margin="14sp"
                    android:layout_marginTop="14sp"
                    android:padding="12sp"/>

                <TextView
                    android:layout_width="80sp"
                    android:layout_height="60sp"
                    android:text="Enter"
                    android:id="@+id/keypad_enter"
                    android:textSize="23sp"
                    android:background="@drawable/circular_accented_background_layout"
                    android:textColor="#AAFFFFFF"
                    android:gravity="center"
                    android:layout_margin="10sp"
                    android:padding="5sp"/>

            </GridLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Forgot PIN?"
                android:textSize="11sp"
                android:layout_centerHorizontal="true"
                android:textColor="#EEFFFFFF"
                android:gravity="center"
                android:background="@drawable/circular_accented_background_layout"
                android:padding="8sp"
                android:id="@+id/lockscreen_forgot_pin"
                android:layout_below="@id/gl_lockcreen_keypad"/>



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>