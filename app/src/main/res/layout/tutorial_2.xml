<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_tut_2"
    android:visibility="gone">

    <!--Tutorial 2 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_tut_2_sv">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EEFFFFFF"
        android:padding="6sp"
        android:id="@+id/rl_tut_content_2"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creator device? What!?"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/tut_2_heading"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When a mobile device runs UniClip, it is either categorized as a 'Creator' or 'not Creator'.\n\n A 'Creator' is a mobile device that first logged in with an email address. And other devices that connect to this account are 'not Creator' devices."
            android:textSize="13sp"
            android:textColor="#AA000000"
            android:gravity="center"
            android:layout_marginTop="14sp"
            android:padding="6sp"
            android:id="@+id/tut_2_1"
            android:layout_below="@id/tut_2_heading"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Access PIN"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:padding="6sp"
            android:id="@+id/tut_2_2"
            android:layout_below="@id/tut_2_1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10sp"
            android:src="@drawable/tut_2_1"
            android:layout_below="@id/tut_2_2"
            android:id="@+id/tut_2_2.5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:text="Creator device has a 'View Access PIN' option, which is required to add other mobile devices to your synchronization network.\n\nIn case you forget your Access PIN, you can click on 'Forgot PIN' and have it emailed to your email.\n\n\n\n"
            android:textSize="13sp"
            android:textColor="#AA000000"
            android:gravity="center"
            android:padding="6sp"
            android:id="@+id/tut_2_3"
            android:layout_below="@id/tut_2_2.5"/>



    </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_tut_2_sv"
        android:id="@+id/rl_tut_mask_2"
        android:background="#88000000">
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2/8"
        android:layout_alignParentRight="true"
        android:textSize="10sp"
        android:layout_margin="14sp"
        android:textColor="#66000000"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_margin="10sp"
        android:background="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:text="Next"
        android:textColor="#BBFFFFFF"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:id="@+id/go_n_to_tut_3"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_margin="10sp"
        android:background="@color/colorAccent"
        android:layout_alignParentLeft="true"
        android:text="Prev"
        android:textColor="#BBFFFFFF"
        android:paddingLeft="10sp"
        android:id="@+id/go_p_to_tut_1"
        android:paddingRight="10sp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>