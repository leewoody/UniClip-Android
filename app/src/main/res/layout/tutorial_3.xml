<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_tut_3"
    android:visibility="gone">

    <!--Tutorial 3 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_tut_3_sv">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EEFFFFFF"
            android:padding="6sp"
            android:id="@+id/rl_tut_content_3"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Access PIN, contd..."
                android:textSize="24sp"
                android:textColor="@color/colorAccent"
                android:id="@+id/tut_3_heading"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="After you clicked on 'Start UniClip' button, you may see something like this:"
                android:textSize="13sp"
                android:textColor="#AA000000"
                android:gravity="center"
                android:layout_marginTop="14sp"
                android:padding="6sp"
                android:id="@+id/tut_3_1"
                android:layout_below="@id/tut_3_heading"/>



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10sp"
                android:src="@drawable/tut_3_1"
                android:layout_below="@id/tut_3_1"
                android:id="@+id/tut_3_2"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0sp"
                android:text="This appears if your current device is not 'Creator' device. As you can see, in above example, 'LGE LG-H816' is the creator device where you can find the Access PIN.\n\nIf you ever forget the PIN, click 'Forgot PIN' to have it mailed to your registered email.\n\n Insert the PIN in the field provided and click '>' to proceed. This will land you on the 'running' page discussed next.\n\n\n\n"
                android:textSize="13sp"
                android:textColor="#AA000000"
                android:gravity="center"
                android:padding="6sp"
                android:id="@+id/tut_3_3"
                android:layout_below="@id/tut_3_2"/>



        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_tut_3_sv"
        android:id="@+id/rl_tut_mask_3"
        android:background="#88000000">
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3/8"
        android:layout_alignParentRight="true"
        android:textSize="10sp"
        android:layout_margin="14sp"
        android:textColor="#66000000"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_margin="10sp"
        android:background="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:text="Next"
        android:textColor="#BBFFFFFF"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:id="@+id/go_n_to_tut_4"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_margin="10sp"
        android:background="@color/colorAccent"
        android:layout_alignParentLeft="true"
        android:text="Prev"
        android:textColor="#BBFFFFFF"
        android:paddingLeft="10sp"
        android:id="@+id/go_p_to_tut_2"
        android:paddingRight="10sp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>