<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_running"
    android:visibility="invisible"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Access Pin -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_access_pin">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#AAFFFFFF"
            android:text="Access Pin"
            android:textSize="18sp"
            android:id="@+id/access_pin_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#88FFFFFF"
            android:text="Whenever a new device wants to listen to your cloudboard, they will be prompted to input in the Access Key (like a PIN code)."
            android:textSize="16sp"
            android:layout_marginTop="12sp"
            android:padding="6sp"
            android:layout_below="@id/access_pin_title"
            android:id="@+id/access_pin_desc"/>

        <Button
            android:layout_width="180sp"
            android:layout_height="40sp"
            android:layout_below="@id/access_pin_desc"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="6sp"
            android:layout_alignParentLeft="true"
            android:id="@+id/b_view_access_pin"
            android:textColor="#CCFFFFFF"
            android:alpha=".94"
            android:text="View Access PIN"
            android:background="@color/colorAccent"/>

        <EditText
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:hint="Pin"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="20sp"
            android:inputType="number"
            android:layout_below="@id/access_pin_desc"
            android:id="@+id/input_access_pin"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="6sp"
            android:visibility="invisible"
            android:textColorHint="#AAFFFFFF"
            android:textColor="@color/colorAccent"
            android:background="@drawable/card_background_layout"/>

        <Button
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_marginTop="10sp"
            android:layout_below="@id/input_access_pin"
            android:layout_marginLeft="6sp"
            android:layout_alignParentLeft="true"
            android:id="@+id/b_set_access_pin"
            android:textColor="#CCFFFFFF"
            android:enabled="true"
            android:visibility="gone"
            android:alpha=".94"
            android:text="Validate"
            android:background="@color/colorAccent"/>

        <RelativeLayout
            android:layout_width="400sp"
            android:layout_height="1sp"
            android:id="@+id/hl6"
            android:background="#88FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/b_set_access_pin"/>
    </RelativeLayout>
    <!-- / Access Pin -->

    <!-- Status -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_status"
        android:layout_below="@id/rl_access_pin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#AAFFFFFF"
            android:text="Status"
            android:layout_marginTop="20sp"
            android:textSize="18sp"
            android:id="@+id/status_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#99FFFFFF"
            android:text="Service: "
            android:textSize="16sp"
            android:layout_marginTop="12sp"
            android:padding="6sp"
            android:layout_below="@id/status_title"
            android:id="@+id/status_service"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#88FFFFFF"
            android:text="Connection: "
            android:textSize="16sp"
            android:layout_marginTop="12sp"
            android:padding="6sp"
            android:layout_below="@id/status_service"
            android:id="@+id/status_connection"/>

        <Button
            android:layout_width="140sp"
            android:layout_height="40sp"
            android:layout_below="@id/status_connection"
            android:layout_marginTop="12sp"
            android:layout_marginLeft="6sp"
            android:layout_alignParentLeft="true"
            android:id="@+id/b_diagnose"
            android:visibility="gone"
            android:textColor="#CCFFFFFF"
            android:alpha=".94"
            android:text="Diagnose"
            android:background="@color/colorAccent"/>



        <RelativeLayout
            android:layout_width="400sp"
            android:layout_height="1sp"
            android:id="@+id/hl8"
            android:background="#88FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/b_diagnose"/>

    </RelativeLayout>


</RelativeLayout>