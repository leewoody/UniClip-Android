<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_running_user_menu"
    android:visibility="gone">

    <!--Switch accounts-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:background="#EEFFFFFF"
        android:id="@+id/rl_running_user_menu_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch user account"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/running_user_menu_heading"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter a new email address below to use UniClip with that account. If the account doesn't already exists, UniClip will create one."
            android:textSize="16sp"
            android:textColor="#AA000000"
            android:gravity="center"
            android:padding="6sp"
            android:id="@+id/running_user_menu_desc"
            android:layout_below="@id/running_user_menu_heading"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="enter email address"
            android:padding="6sp"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="16sp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#66000000"
            android:id="@+id/running_user_menu_new_email"
            android:layout_below="@id/running_user_menu_desc"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_marginTop="10sp"
            android:background="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:text="Switch account"
            android:textColor="#BBFFFFFF"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:id="@+id/running_user_switch"
            android:layout_margin="6sp"
            android:layout_below="@id/running_user_menu_new_email"/>

    </RelativeLayout>

    <!--Delete account-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EEFFFFFF"
        android:padding="10sp"
        android:id="@+id/rl_del_user"
        android:visibility="gone"
        android:layout_below="@id/rl_running_user_menu_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="20sp"
            android:layout_height="wrap_content"
            android:text="Delete current account"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/del_user_heading"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you wish to stop using UniClip! and delete the current account, click the button below.\n"
            android:textSize="16sp"
            android:textColor="#AA000000"
            android:gravity="center"
            android:padding="6sp"
            android:id="@+id/del_user_desc"
            android:layout_below="@id/del_user_heading"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_marginTop="16sp"
            android:background="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:text="Unregister"
            android:textColor="#BBFFFFFF"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:id="@+id/b_del_user"
            android:layout_margin="6sp"
            android:layout_below="@id/del_user_desc"/>

        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="40sp"-->
            <!--android:layout_marginTop="16sp"-->
            <!--android:background="@color/colorAccent"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:text="Cancel"-->
            <!--android:textColor="#BBFFFFFF"-->
            <!--android:paddingLeft="10sp"-->
            <!--android:id="@+id/running_user_menu_back"-->
            <!--android:paddingRight="10sp"-->
            <!--android:layout_margin="6sp"-->
            <!--android:layout_below="@id/del_user_desc"/>-->



    </RelativeLayout>



    <!--Change creator-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EEFFFFFF"
        android:padding="10sp"
        android:id="@+id/rl_change_creator"
        android:layout_below="@id/rl_del_user"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="20sp"
            android:layout_height="wrap_content"
            android:text="Change creator device"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/change_creator_heading"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you have changed your mobile and want to make this device your creator device, click 'Change Creator' below.\n"
            android:textSize="16sp"
            android:textColor="#AA000000"
            android:gravity="center"
            android:padding="6sp"
            android:id="@+id/change_creator_desc"
            android:layout_below="@id/change_creator_heading"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_marginTop="16sp"
            android:background="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:text="Change Creator"
            android:textColor="#BBFFFFFF"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:id="@+id/b_change_creator"
            android:layout_margin="6sp"
            android:layout_below="@id/change_creator_desc"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_marginTop="16sp"
            android:background="@color/colorAccent"
            android:layout_alignParentLeft="true"
            android:text="Cancel"
            android:textColor="#BBFFFFFF"
            android:paddingLeft="10sp"
            android:id="@+id/running_user_menu_back"
            android:paddingRight="10sp"
            android:layout_margin="6sp"
            android:layout_below="@id/change_creator_desc"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_change_creator"
        android:id="@+id/rl_running_user_menu_mask"
        android:background="#88000000">
    </RelativeLayout>

</RelativeLayout>